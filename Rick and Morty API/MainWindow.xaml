<Window x:Class="Rick_and_Morty_API.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rick_and_Morty_API"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="cboCharacters" HorizontalAlignment="Left" Margin="62,104,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboCharacters_SelectionChanged"/>
        <Label Content="Select a character" HorizontalAlignment="Left" Margin="35,73,0,0" VerticalAlignment="Top"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="346,81,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="424,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="URL:" HorizontalAlignment="Left" Margin="346,126,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtURL" HorizontalAlignment="Left" Margin="424,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Image x:Name="imgPicture" HorizontalAlignment="Left" Height="227" Margin="390,191,0,0" VerticalAlignment="Top" Width="388"/>
    </Grid>
</Window>
