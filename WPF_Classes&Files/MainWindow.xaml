<Window x:Class="WPF_Classes_Files.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Classes_Files"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/texture-decorative-plaster-applied-wall.jpg"/>
        </Grid.Background>
        <TextBox x:Name="txtManufacturer" HorizontalAlignment="Left" Margin="280,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" Height="34" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="280,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" Height="35"/>
        <Label Content="Enter Manufacturer:" HorizontalAlignment="Left" Margin="148,107,0,0" VerticalAlignment="Top" Background="#FFC7E6D8"/>
        <Label Content="Enter Name:" HorizontalAlignment="Left" Margin="148,164,0,0" VerticalAlignment="Top" Background="#FFC7E6D8"/>
        <Button x:Name="btnAddToy" Content="Add" HorizontalAlignment="Left" Margin="343,377,0,0" VerticalAlignment="Top" Height="21" Width="42" Background="#FFC9E2EB" Click="btnAddToy_Click"/>
        <Label Content="Enter Image:" HorizontalAlignment="Left" Margin="148,276,0,0" VerticalAlignment="Top" Background="#FFC7E6D8"/>
        <Label Content="Enter Price:" HorizontalAlignment="Left" Margin="148,217,0,0" VerticalAlignment="Top" Background="#FFC7E6D8"/>
        <TextBox x:Name="txtImage" HorizontalAlignment="Left" Margin="280,280,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" Height="33"/>
        <TextBox x:Name="txtPrice" HorizontalAlignment="Left" Margin="280,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" Height="32"/>
        <Image x:Name="imgToy" HorizontalAlignment="Left" Height="128" Margin="527,39,0,0" VerticalAlignment="Top" Width="229"/>
        <ListBox x:Name="lstToys"  Margin="462,198,10,19" MouseDoubleClick="lstToys_MouseDoubleClick"/>

    </Grid>
</Window>
