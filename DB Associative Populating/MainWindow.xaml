<Window x:Class="DB_Associative_Populating.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DB_Associative_Populating"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Button x:Name="btnGo" Content="Go" HorizontalAlignment="Left" Margin="148,322,0,0" VerticalAlignment="Top" Height="29" Width="104" Click="btnGo_Click"/>
        <ListBox x:Name="lstDogs" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="451,33,0,235" SelectionChanged="lstDogs_SelectionChanged"/>
        <ListBox x:Name="lstToys" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,33,513,235" SelectionChanged="lstToys_SelectionChanged"/>
        <ListBox x:Name="lstDogToys" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="451,249,0,11"/>
        <Label  Content="Dogs" HorizontalAlignment="Left" Margin="464,2,0,0" VerticalAlignment="Top"/>
        <Label  Content="Dog Toys" HorizontalAlignment="Left" Margin="464,217,0,0" VerticalAlignment="Top"/>
        <Label  Content="Toys" HorizontalAlignment="Left" Margin="24,-3,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnConnect" Content="Give Toy to Dog" HorizontalAlignment="Left" Margin="321,188,0,0" VerticalAlignment="Top" Height="29" Width="103" Click="btnConnect_Click" />
        <Image x:Name ="imgDog" HorizontalAlignment="Left" Height="130" Margin="311,33,0,0" VerticalAlignment="Top" Width="128"/>
        <Image x:Name ="imgToy" HorizontalAlignment="Left" Height="126" Margin="24,217,0,0" VerticalAlignment="Top" Width="117"/>
        <Button x:Name="btnDeleteDogToy" Content="Remove the toy for the dog" HorizontalAlignment="Left" Margin="285,278,0,0" VerticalAlignment="Top" Height="44" Click="btnDeleteDogToy_Click"/>
        <Button x:Name ="btnSharedWithFriend" Content="Give Toy to Dog Friend" HorizontalAlignment="Left" Margin="285,234,0,0" VerticalAlignment="Top" Height="30" Width="138" Click="btnSharedWithFriend_Click"/>
        <Label x:Name ="lblOwner" Content="" HorizontalAlignment="Left" Margin="24,376,0,0" VerticalAlignment="Top" Width="228" Height="47"/>

    </Grid>
</Window>
