<Window x:Class="Database_SelectingData.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Database_SelectingData"
        xmlns:vm="clr-namespace:Database_SelectingData.ViewModels"
        mc:Ignorable="d"
        Title="Course and Student Viewer" Height="450" Width="800" Background="#FF97D6BA">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Student List -->
        <GroupBox Header="Students" Margin="5,5,5,5" Grid.RowSpan="2">
            <ListView x:Name="StudentList"
                      ItemsSource="{Binding Students}"
                      DisplayMemberPath="LastName"
                      MouseDoubleClick="StudentList_MouseDoubleClick" Background="#FFFAEFCA" />
        </GroupBox>

        <!-- Course List -->
        <GroupBox Header="Courses" Margin="5,5,5,5" Grid.Column="1" Grid.RowSpan="2">
            <ListView x:Name="CourseList"
                      ItemsSource="{Binding Courses}"
                      DisplayMemberPath="CourseName"
                      MouseDoubleClick="CourseList_MouseDoubleClick" Background="#FFE5EDCC" />
        </GroupBox>

        <!-- Registered Courses Display -->
        <StackPanel Grid.ColumnSpan="2" VerticalAlignment="Bottom" Margin="5,0,5,5" Grid.Row="1">
            <TextBlock Text="Courses registered for selected student:"
                       FontWeight="Bold" Margin="0,10,0,5"/>
            <ListBox x:Name="RegisteredCoursesList" Height="120" Background="#FFC4E5DE" />
        </StackPanel>
    </Grid>
</Window>
